# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Local development: postgresql://localhost/chamorro_rag
# Production: Your hosting provider will provide this URL
DATABASE_URL=postgresql://localhost/chamorro_rag

# Web Search API Keys
BRAVE_API_KEY=your_brave_search_api_key_here
WEATHER_API_KEY=your_weather_api_key_here

# CORS Configuration
# Development: Use "*" to allow all origins
# Production: Comma-separated list of allowed origins
# Example: https://your-frontend.com,https://www.your-frontend.com
ALLOWED_ORIGINS=*

# Rate Limiting Configuration
# Number of requests allowed per window
RATE_LIMIT_REQUESTS=60
# Time window in seconds
RATE_LIMIT_WINDOW=60

# Optional: OpenAI API Base URL (for custom endpoints)
# OPENAI_API_BASE=https://api.openai.com/v1
